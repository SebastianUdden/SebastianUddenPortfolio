@{
    Layout = "~/Views/Shared/_PortfolioLayout.cshtml";
    ViewBag.Title = "Photo Slider";
}

<style>
    .carousel-inner {
        height: 41vh;
    }

    .carousel, img {
        height: 100% !important;
        width:100% !important;
        border: 5px solid #ff6a00;
    }

    .carousel .item {
        height: 98% !important;
    }

    .item img {
        top: 0;
        left: 0;
        min-height: 100% !important;
    }
</style>
<div ng-controller="photoSliderCtrl">
    <div class="container content-section text-center"  ng-if="!showCarousel">
        <button class="standard-btn btn-width-medium" onclick="window.location.href = '/Home/Index#portfolio'">Portfolio</button>
        <button class="standard-btn btn-width-medium" ng-if="!showCarousel" onclick="toggleCarousel();">Show Carousel</button>
        <button class="standard-btn btn-width-medium" ng-if="showCarousel" onclick="toggleCarousel();">Hide Carousel</button>
    </div>
    <br />
    <br />
    <br />
    <div class="container slider" ng-if="showCarousel">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                <li data-target="#carousel-example-generic" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img style="width:60vw" src="~/img/Portfolio/PhotoSlider/img00.jpg" alt="...">
                    <div class="carousel-caption">
                        <h3>Riverside</h3>
                    </div>
                </div>
                <div class="item">
                    <img style="width:60vw" src="~/img/Portfolio/PhotoSlider/img01.jpg" alt="..." />
                    <div class="carousel-caption">
                        <h3>Millenium Bridge</h3>
                    </div>
                </div>
                <div class="item">
                    <img style="width:60vw" src="~/img/Portfolio/PhotoSlider/img02.jpg" alt="..." />
                    <div class="carousel-caption">
                        <h3>The Plaza</h3>
                    </div>
                </div>
                <div class="item">
                    <img style="width:60vw" src="~/img/Portfolio/PhotoSlider/img03.jpg" alt="..." />
                    <div class="carousel-caption">
                        <h3>Tower Bridge</h3>
                    </div>
                </div>
                <div class="item">
                    <img style="width:60vw" src="~/img/Portfolio/PhotoSlider/img04.jpg" alt="..." />
                    <div class="carousel-caption">
                        <h3>Downtown</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
<script>
    app.controller('photoSliderCtrl', ['$scope', function ($scope) {
        $scope.showCarousel = true;

        $scope.toggleCarousel = function () {
            $scope.showCarousel = !$scope.showCarousel;
        };
    }]);
</script>
